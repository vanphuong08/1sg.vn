
@using project.Models;
@functions{
    public DataContext db = new DataContext();
    public List<TEAM> GetDb()
    {
        var list_team = db.TEAMs.ToList();
        return list_team;
    }
    public List<CONTACT> GetDbContact()
    {
        var list_contacts = db.CONTACTs.ToList();
        return list_contacts;
    }
    public List<HOME> GetDbHOME()
    {
        var list_home = db.HOMEs.ToList();
        return list_home;
    }
}


