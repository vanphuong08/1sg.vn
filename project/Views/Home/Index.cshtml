<div id="Contact" class="contact-section section gradiant-background pb-90">
    <div class="container">
        <div class="section-head heading-light text-center">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h2 class="heading heading-light">Liên hệ với chúng tôi</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="contact-form white-bg text-center">
                    <h3>Kết nối với chúng tôi</h3>

                    <form id="contact-form" class="form-message" action="" method="post" novalidate="novalidate">
                        <div class="form-results"></div>
                        <div class="form-group row fix-gutter-10">
                            <div class="form-field col-sm-6 gutter-10 form-m-bttm">
                                <input name="contact-name" type="text" placeholder="Họ tên *" class="form-control required" aria-required="true">
                            </div>
                            <div class="form-field col-sm-6 gutter-10">
                                <input name="contact-email" type="email" placeholder="Email *" class="form-control required email" aria-required="true">
                            </div>
                        </div>
                        <div class="form-group row fix-gutter-10">
                            <div class="form-field col-md-6 gutter-10 form-m-bttm">
                                <input name="contact-phone" type="text" placeholder="Số điện thoại *" class="form-control required" aria-required="true">
                            </div>
                            <div class="form-field col-md-6 gutter-10">
                                <input name="contact-subject" type="text" placeholder="Tiêu đề *" class="form-control required" aria-required="true">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="form-field col-md-12">
                                <textarea name="contact-message" placeholder="Nội dung *" class="txtarea form-control required" aria-required="true"></textarea>
                            </div>
                        </div>
                        <input type="text" class="hidden" name="form-anti-honeypot" value="">
                        <button type="submit" class="button solid-btn sb-h">Gửi</button>
                    </form>
                </div>
            </div><!-- .col  -->
            <div class="col-md-6">
                <div class="contact-info white-bg">

                    @{
                        var _list_contact = GetDbContact();
                    }
                    @foreach (var item in _list_contact)
                    {
                        <div class="row">
                            <div class="col-sm-6">
                                <h6><em class="fa fa-envelope"></em>@item.EMAIL</h6>
                            </div>
                            <div class="col-sm-6">
                                <h6><em class="fa fa-phone"></em> @item.PHONE_NUMBER</h6>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <h6><em class="fa fa-map-marker"></em> @item.ADDRESS</h6>
                            </div>
                        </div>
                    }



                </div>
            </div><!-- .col  -->
        </div><!-- .row  -->
    </div><!-- .container  -->
</div><!-- .contact-section  -->